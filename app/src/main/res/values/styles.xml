<resources>
    <!-- Shape base -->
    <style name="App.Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="PopularTag" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_tag_popular</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">@style/Text.BodySmall.Muted</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="BenefitText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_check</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/Text.BodyMedium</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- ===== Botões ===== -->
    <style name="App.Button.Primary" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/App.Shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/ripplePrimary</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="App.Button.LessRounded" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/App.Shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/rippleNeutral</item>
    </style>

    <style name="App.Button.Outlined.LessRounded" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/App.Shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/rippleNeutral</item>
    </style>

    <style name="App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/rippleNeutral</item>
    </style>

    <!-- ===== Cards ===== -->
    <!-- MaterialCardView não aceita drawable em cardBackgroundColor, então usamos android:background -->
    <style name="Card.Glass" parent="Widget.Material3.CardView.Filled">
        <item name="android:background">@drawable/glass_fume_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- ===== Tipografia utilitária ===== -->
    <style name="Text.TitleMedium.Bold" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Text.BodySmall.Muted" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- ===== Chips ===== -->
    <style name="Widget.StartupPulse.Chip.Area" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/colorSurfaceVariant</item>
        <item name="chipStrokeColor">@color/colorDivider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="rippleColor">@color/rippleNeutral</item>
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textAppearance">@style/Text.TitleLarge</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Widget.StartupPulse.Chip.Area.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/colorSurface</item>
        <item name="chipStrokeColor">@color/colorDivider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="rippleColor">@color/rippleNeutral</item>
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textAppearance">@style/Text.BodyMedium</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.StartupPulse.Chip.Profession" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/colorSurface</item>
        <item name="chipStrokeColor">@color/colorDivider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="rippleColor">@color/rippleNeutral</item>
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textAppearance">@style/Text.BodyMedium</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Widget.StartupPulse.Chip.Area.Small" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/Text.BodyMedium</item>
        <item name="chipBackgroundColor">@color/colorSurface</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
    </style>

    <style name="Widget.StartupPulse.Chip.Area.Compact" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/Text.BodyMedium</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="chipBackgroundColor">@color/colorSurface</item>
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorDivider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/rippleNeutral</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <!-- TextField filled denso (para dropdown do filtro) -->
    <style name="StartupPulse.TextField.Filled.Dense" parent="Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="hintTextColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="chipBackgroundColor">@color/colorSurface</item>
        <item name="android:textAppearance">@style/Text.BodyMedium</item>
    </style>

    <!-- Tonal compacto -->
    <style name="StartupPulse.Button.Tonal.Compact" parent="Widget.Material3.Button.TonalButton">
        <item name="android:minHeight">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconSize">16dp</item>
        <item name="chipBackgroundColor">@color/colorSurface</item>
        <item name="android:textAppearance">@style/Text.TitleLarge</item>
    </style>

    <style name="Theme.StartupPulse.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Para pré-Android 12: usa um windowBackground com layout -->
        <item name="android:windowBackground">@drawable/splash_window_bg</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.App.Card.Glass" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/glass_fume_background</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.StatContainer" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.StatValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">"—"</item>
    </style>

    <style name="Widget.App.StatLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:textColor">@color/colorOnSurfaceVariant</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="App.Button.Outlined.LessRounded.OnSurface" parent="App.Button.Outlined.LessRounded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/colorOutline</item>
        <item name="iconTint">@color/colorOnSurfaceVariant</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="rippleColor">@color/rippleNeutral</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="iconPadding">12dp</item>
    </style>

    <style name="App.Button.Destructive" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/App.Shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorError</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/ripplePrimary</item> <item name="elevation">2dp</item>
    </style>

    <style name="VoteEmojiButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item> <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/bg_vote_button_selector</item> <item name="android:textColor">@color/colorOnSurface</item> <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.DayNight">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>