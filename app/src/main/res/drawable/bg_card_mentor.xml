<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/mentorCardBaseStart"
                android:centerColor="@color/mentorCardBaseCenter"
                android:endColor="@color/mentorCardBaseEnd"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/> <gradient
            android:type="radial"
            android:gradientRadius="280dp"
            android:centerX="50%"
            android:centerY="35%"
            android:startColor="@color/mentorCardVignetteStart"
            android:endColor="@color/mentorCardVignetteEnd"/>
        </shape>
    </item>

    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/colorDivider"/>
        </shape>
    </item>

</layer-list>