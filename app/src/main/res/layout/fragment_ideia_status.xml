<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".IdeiaStatusFragment">

        <TextView
            android:id="@+id/text_ideia_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text.TitleLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Revolução dos Cafés Especiais" />

        <TextView
            android:id="@+id/text_ideia_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Text.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_ideia_title"
            tools:text="Uma plataforma que conecta produtores de grãos de alta qualidade diretamente com consumidores." />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/text_ideia_description" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_status_animation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            tools:lottie_rawRes="@raw/anim_ambiente_ideal" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_publicada"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lottie_status_animation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_publicada"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_rocket_launch"
                    app:tint="@color/colorSurface" />

                <TextView
                    android:id="@+id/label_publicada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Ideia publicada"
                    android:textAppearance="@style/Text.TitleMedium"
                    android:textColor="@color/colorSurface" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_ia"
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_publicada">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_ia"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bolt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/title_ia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Mentor IA"
                    android:textAppearance="@style/Text.TitleLarge"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_ia"
                    app:layout_constraintTop_toTopOf="@id/icon_ia"
                    app:layout_constraintBottom_toBottomOf="@id/icon_ia"/>

                <TextView
                    android:id="@+id/text_ia_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Receba um feedback instantâneo sobre sua ideia."
                    android:textAppearance="@style/Text.BodyMedium"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/title_ia"
                    app:layout_constraintTop_toBottomOf="@id/title_ia" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_solicitar_analise_ia"
                    style="@style/App.Button.Outlined.LessRounded"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Solicitar Pré-Análise com IA"
                    app:icon="@drawable/ic_bolt"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/text_ia_status"
                    app:layout_constraintTop_toBottomOf="@id/text_ia_status" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ver_analise_ia"
                    style="@style/App.Button.Outlined.LessRounded.OnSurface"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ver Análise da IA"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:icon="@drawable/ic_check_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/text_ia_status"
                    app:layout_constraintTop_toBottomOf="@id/btn_solicitar_analise_ia" />

                <ProgressBar
                    android:id="@+id/progress_bar_ia"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/btn_solicitar_analise_ia"
                    app:layout_constraintEnd_toStartOf="@id/btn_solicitar_analise_ia"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/btn_solicitar_analise_ia" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_mentor"
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_ia">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_mentor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mentor"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_mentor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/Text.BodyMedium"
                    tools:text="A procurar mentor..." />

                <ImageButton
                    android:id="@+id/btn_procurar_mentor"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/colorSurface"
                    android:background="@drawable/action_button_bg_enabled"
                    android:contentDescription="Procurar novo mentor"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_avaliacao"
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_mentor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_avaliacao"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_avaliacao_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/Text.BodyMedium"
                    tools:text="Aguardando Avaliação" />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/btn_ver_feedback"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/action_button_bg_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="false"
                        tools:enabled="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/action_button_content_selector"
                            android:duplicateParentState="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Feedback"
                            android:textAppearance="@style/Text.BodySmall.Muted"
                            android:textColor="@color/action_button_content_selector"
                            android:gravity="center"
                            android:duplicateParentState="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_download_pdf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/action_button_bg_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="false"
                        tools:enabled="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_download"
                            app:tint="@color/action_button_content_selector"
                            android:duplicateParentState="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Baixar PDF"
                            android:textAppearance="@style/Text.BodySmall.Muted"
                            android:textColor="@color/action_button_content_selector"
                            android:gravity="center"
                            android:duplicateParentState="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_preparar_investidores"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/action_button_bg_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="false"
                        tools:enabled="false">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_rocket_launch"
                            app:tint="@color/action_button_content_selector"
                            android:duplicateParentState="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Investidores"
                            android:textAppearance="@style/Text.BodySmall.Muted"
                            android:textColor="@color/action_button_content_selector"
                            android:gravity="center"
                            android:duplicateParentState="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>