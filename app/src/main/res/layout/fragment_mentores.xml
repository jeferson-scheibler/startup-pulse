<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentoresFragment">

    <LinearLayout
        android:id="@+id/container_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- ===== Filtro (clean, premium) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@android:color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp">

                <!-- Label sutil -->
                <TextView
                    android:id="@+id/labelFiltro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filtrar_por_area"
                    android:textAppearance="@style/Text.BodyMedium"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Pílula do filtro -->
                <LinearLayout
                    android:id="@+id/filterPill"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_filter_pill"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintTop_toBottomOf="@id/labelFiltro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- ícone de lupa -->
                    <ImageView
                        android:id="@+id/iconSearch"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/selecione_uma_rea_de_interesse"
                        android:textAppearance="@style/Text.BodyMedium"
                        android:src="@drawable/ic_search"
                        app:tint="@color/colorOnSurface" />

                    <!-- Dropdown “todas as áreas” (sem underline) -->
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/autoCompleteAreaFilter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/todas_as_areas"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:inputType="none"
                        android:focusable="true"
                        android:clickable="true"
                        android:textAppearance="@style/Text.BodyMedium"
                        android:textColor="@color/colorOnSurface"
                        android:textColorHint="@color/colorHint"
                        app:tint="@color/colorOnSurface"/>

                    <!-- divisor vertical -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/strokeSoft" />

                    <!-- seta do dropdown (opcional) -->
                    <ImageView
                        android:id="@+id/iconChevron"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/abrir_lista"
                        android:src="@drawable/ic_chevron_down"
                        app:tint="@color/colorOnSurface"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Mapa cardificado com overlay status ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/strokeSoft"
            app:cardBackgroundColor="@color/colorSurface">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <org.osmdroid.views.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/mentores_mapa_content_desc"/>
                <!-- ===== Métricas (cards) ===== -->
                <ScrollView
                    android:id="@+id/stats_scroller"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginBottom="6dp"
                    android:background="@android:color/transparent"
                    android:overScrollMode="never"
                    android:paddingStart="2dp"
                    android:paddingEnd="10dp"
                    android:scrollbars="none"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/stats_container"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clipToPadding="false"
                        android:divider="@null"
                        android:orientation="vertical"
                        android:showDividers="none">

                        <!-- Card 1: Mentores -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_stat_mentores"
                            style="@style/Widget.Material3.CardView.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginEnd="2dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:minWidth="100dp"
                            app:cardBackgroundColor="@color/colorSecondary"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardUseCompatPadding="false"
                            android:layout_margin="4dp"
                            app:strokeWidth="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/stat_count_mentores"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/colorOnSecondary"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mentores"
                                    android:textAppearance="@style/Text.BodySmall.Muted"
                                    android:textColor="@color/colorOnSecondary"
                                    android:textSize="8sp"
                                    app:layout_constraintStart_toStartOf="@id/stat_count_mentores"
                                    app:layout_constraintTop_toBottomOf="@id/stat_count_mentores" />

                                <ImageView
                                    android:id="@+id/stat_icon_mentores"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:alpha="0.24"
                                    android:src="@drawable/ic_mentor"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/colorOnSecondary" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Card 2: Áreas -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_stat_areas"
                            style="@style/Widget.Material3.CardView.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:minWidth="100dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardUseCompatPadding="false"
                            android:layout_margin="4dp"
                            app:strokeWidth="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_constraint_stroke"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/stat_count_areas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                    android:textColor="@color/colorOnSurface"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Áreas"
                                    android:textAppearance="@style/Text.BodySmall.Muted"
                                    android:textColor="@color/colorOnSurface"
                                    android:textSize="10sp"
                                    app:layout_constraintStart_toStartOf="@id/stat_count_areas"
                                    app:layout_constraintTop_toBottomOf="@id/stat_count_areas" />

                                <ImageView
                                    android:id="@+id/stat_icon_areas"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:alpha="0.24"
                                    android:src="@drawable/ic_location_pin"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/colorOnSurface" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </ScrollView>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Lista / Grid com pull-to-refresh ===== -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingBottom="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_mentores"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="2dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="@android:color/transparent"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_mentor"
                tools:spanCount="1" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- ===== Empty state ===== -->
        <LinearLayout
            android:id="@+id/view_empty_state_mentores"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                android:src="@drawable/ic_person"
                app:tint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/empty_mentores_title"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/colorOnSurface"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/empty_mentores_subtitle"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/colorHint"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
