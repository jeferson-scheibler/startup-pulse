<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Preparação para Investidores"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/black_translucent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nível de Prontidão"
                            android:textAppearance="@style/Text.TitleMedium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_readiness_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Text.TitleMedium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="75%" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress_readiness"
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="12dp"
                            app:trackCornerRadius="8dp"
                            app:indicatorColor="@color/green_success"
                            app:trackColor="@color/colorOnSurfaceVariant"
                            app:indicatorDirectionCircular="clockwise"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:columnCount="2">

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="fill_horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/check_canvas"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/ic_check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Canvas"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="fill_horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/check_equipe"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/ic_check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Equipe"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="fill_horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/check_metricas"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/ic_check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Métricas"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="fill_horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/check_mentor"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/ic_check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Mentor"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:layout_gravity="fill_horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/check_pitch_deck"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/ic_check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Pitch Deck"/>
                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <ProgressBar
                android:id="@+id/progress_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipe do Projeto"
                        android:textAppearance="@style/Text.TitleMedium"
                        android:drawableStart="@drawable/ic_work"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_equipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        tools:listitem="@layout/item_membro_equipe_edit"
                        tools:itemCount="2"/>

                    <Button
                        android:id="@+id/btn_adicionar_membro"
                        style="@style/App.Button.Outlined.LessRounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Adicionar Membro"
                        app:icon="@drawable/ic_add" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pitch Deck"
                        android:textAppearance="@style/Text.TitleMedium"
                        app:drawableStartCompat="@drawable/ic_publicar"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_pitch_deck_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Nenhum arquivo anexado."
                        android:textAppearance="@style/Text.BodyMedium"
                        android:textColor="?android:textColorSecondary"/>

                    <Button
                        android:id="@+id/btn_anexar_pitch"
                        style="@style/App.Button.Outlined.LessRounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:text="Anexar Arquivo" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Métricas e Tração Inicial"
                        android:textAppearance="@style/Text.TitleMedium"
                        android:drawableStart="@drawable/ic_trending_up"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_metricas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_metrica_edit" />

                    <Button
                        android:id="@+id/btn_adicionar_metrica"
                        style="@style/App.Button.Outlined.LessRounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Adicionar Métrica"
                        app:icon="@drawable/ic_add" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_salvar_liberar_acesso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Salvar e Liberar Acesso a Investidores"
                style="@style/App.Button.Primary"
                android:padding="12dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>