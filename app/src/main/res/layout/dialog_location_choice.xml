<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    app:cardCornerRadius="22dp"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="@color/grafitero_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieLoading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/anim_mapa_procurando"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde buscar mentores?"
                android:textAppearance="@style/Text.TitleLarge"
                android:textColor="@color/colorOnSurface"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha qual localização deseja usar para encontrar o mentor ideal:"
                android:textAppearance="@style/Text.BodyMedium"
                android:textColor="@color/colorOnSurface"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUseIdeaLocation"
                style="@style/App.Button.LessRounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usar localização da ideia"
                android:visibility="gone"
                app:icon="@drawable/ic_location_pin"
                app:iconGravity="textStart"
                app:iconPadding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUseUserLocation"
                style="@style/App.Button.LessRounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usar minha localização"
                android:visibility="gone"
                app:icon="@drawable/ic_person"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinueWithoutLocation"
                style="@style/App.Button.Outlined.LessRounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuar sem localização"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>