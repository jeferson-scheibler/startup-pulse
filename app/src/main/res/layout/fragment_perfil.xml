<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_perfil"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/avatar_glow_ring"
            android:contentDescription="@string/perfil_foto"
            android:elevation="10dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/colorSecondary"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/text_view_nome_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="@color/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_view_perfil"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            tools:text="JEFERSON SCHEIBLER" />

        <TextView
            android:id="@+id/text_view_email_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.92"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/text_view_nome_perfil"
            app:layout_constraintStart_toStartOf="@id/text_view_nome_perfil"
            app:layout_constraintEnd_toEndOf="@id/text_view_nome_perfil"
            tools:text="jeff@example.com" />

        <LinearLayout
            android:id="@+id/badges_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:divider="@drawable/divider_badge_gap"
            android:showDividers="middle"
            app:layout_constraintTop_toBottomOf="@id/text_view_email_perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/chip_premium"
                style="@style/Widget.App.Chip"
                android:background="@drawable/bg_badge_primary"
                android:text="Premium"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/chip_member_since"
                style="@style/Widget.App.Chip"
                android:background="@drawable/bg_badge_neutral"
                android:text="Membro há 1 mês"
                android:textColor="@color/colorOnSurface" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_perfil"
            style="@style/Widget.App.Card.Glass"
            app:layout_constraintTop_toBottomOf="@id/badges_row"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_plano"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_rocket_launch"
                    app:tint="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_nome_plano"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/text_view_validade_plano"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_plano"
                    app:layout_constraintTop_toTopOf="@id/icon_plano"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Plano Premium" />

                <TextView
                    android:id="@+id/text_view_validade_plano"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintBottom_toBottomOf="@id/icon_plano"
                    app:layout_constraintEnd_toEndOf="@id/text_view_nome_plano"
                    app:layout_constraintStart_toStartOf="@id/text_view_nome_plano"
                    app:layout_constraintTop_toBottomOf="@id/text_view_nome_plano"
                    tools:text="Válido até 08/09/2025" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_upgrade_pro"
                    style="@style/App.Button.Outlined.LessRounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Gerenciar Assinatura"
                    app:icon="@drawable/ic_fontes_renda"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_validade_plano"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_stats"
            style="@style/Widget.App.Card.Glass"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_perfil"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/icon_stat_publicadas"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lightbulb_outline"
                    app:tint="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stat_publicadas"
                    app:layout_constraintBottom_toBottomOf="@id/label_stat_publicadas"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/stat_publicadas"
                    style="@style/Widget.App.StatValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon_stat_publicadas"
                    app:layout_constraintBottom_toTopOf="@id/label_stat_publicadas"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_marginStart="8dp"
                    tools:text="12" />

                <TextView
                    android:id="@+id/label_stat_publicadas"
                    style="@style/Widget.App.StatLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ideias_publicadas"
                    android:alpha="0.8"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintTop_toBottomOf="@id/stat_publicadas"
                    app:layout_constraintStart_toStartOf="@id/stat_publicadas"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_engagement"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:progress="32"
                    app:indicatorSize="90dp"
                    app:trackThickness="6dp"
                    app:trackCornerRadius="3dp"
                    app:indicatorColor="@color/colorPrimary"
                    app:trackColor="@color/colorSurfaceVariant"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/stat_engajamento_value"
                    style="@style/Widget.App.StatValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadlineMedium"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/progress_engagement"
                    app:layout_constraintBottom_toBottomOf="@id/progress_engagement"
                    app:layout_constraintStart_toStartOf="@id/progress_engagement"
                    app:layout_constraintEnd_toEndOf="@id/progress_engagement"
                    tools:text="32" />

                <TextView
                    android:id="@+id/label_stat_engajamento"
                    style="@style/Widget.App.StatLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/engajamento"
                    android:alpha="0.8"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintTop_toBottomOf="@id/progress_engagement"
                    app:layout_constraintStart_toStartOf="@id/progress_engagement"
                    app:layout_constraintEnd_toEndOf="@id/progress_engagement"/>


                <ImageView
                    android:id="@+id/icon_stat_dias"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar_today"
                    app:tint="@color/colorPrimary"
                    app:layout_constraintEnd_toStartOf="@id/stat_dias"
                    app:layout_constraintTop_toTopOf="@id/stat_dias"       app:layout_constraintBottom_toBottomOf="@id/stat_dias" android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/stat_dias"
                    style="@style/Widget.App.StatValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/label_stat_dias"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_marginEnd="8dp"
                    tools:text="2" />

                <TextView
                    android:id="@+id/label_stat_dias"
                    style="@style/Widget.App.StatLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dias_acessados"
                    android:alpha="0.8"
                    android:textColor="@color/colorOnSurface"
                    app:layout_constraintTop_toBottomOf="@id/stat_dias"
                    app:layout_constraintEnd_toEndOf="@id/stat_dias"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_actions"
            style="@style/Widget.App.Card.Glass"
            app:layout_constraintTop_toBottomOf="@id/card_stats"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditarPerfil"
                    style="@style/App.Button.Outlined.LessRounded.OnSurface"
                    android:text="@string/editar_perfil"
                    app:icon="@drawable/ic_edit" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrivacidade"
                    style="@style/App.Button.Outlined.LessRounded.OnSurface"
                    android:layout_marginTop="10dp"
                    android:text="@string/privacidade_e_seguranca"
                    app:icon="@drawable/ic_shield" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAjuda"
                    style="@style/App.Button.Outlined.LessRounded.OnSurface"
                    android:layout_marginTop="10dp"
                    android:text="@string/ajuda_e_suporte"
                    app:icon="@drawable/ic_help" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_tornar_mentor"
            style="@style/App.Button.Outlined.LessRounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingVertical="12dp"
            android:text="Tornar-se um Mentor"
            app:icon="@drawable/ic_mentor"
            app:layout_constraintTop_toBottomOf="@id/card_actions"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sair"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/sair_conta"
            android:textColor="@color/colorError"
            app:icon="@drawable/ic_logout"
            app:iconTint="@color/colorError"
            app:layout_constraintTop_toBottomOf="@id/button_tornar_mentor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>