<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_deep_glow"
    android:fillViewport="true"
    tools:context=".PerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <View
            android:id="@+id/header_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/glass_fume_background"
            android:alpha="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/text_view_email_perfil"
            android:layout_marginBottom="-30dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sair"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_logout"
            app:iconTint="?attr/colorError"
            app:iconSize="28dp"
            android:contentDescription="Sair da Conta"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:elevation="8dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp"
            tools:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/text_view_nome_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_perfil"
            tools:text="Nome Incrível do Usuário" />

        <TextView
            android:id="@+id/text_view_email_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintEnd_toEndOf="@id/text_view_nome_perfil"
            app:layout_constraintStart_toStartOf="@id/text_view_nome_perfil"
            app:layout_constraintTop_toBottomOf="@id/text_view_nome_perfil"
            tools:text="usuario.premium@email.com" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_email_perfil">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_fume_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_plano"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_rocket_launch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/text_view_nome_plano"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/icon_plano"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/icon_plano"
                    app:layout_constraintBottom_toTopOf="@id/text_view_validade_plano"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Plano Premium" />

                <TextView
                    android:id="@+id/text_view_validade_plano"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@id/text_view_nome_plano"
                    app:layout_constraintEnd_toEndOf="@id/text_view_nome_plano"
                    app:layout_constraintTop_toBottomOf="@id/text_view_nome_plano"
                    app:layout_constraintBottom_toBottomOf="@id/icon_plano"
                    tools:text="Válido até 24/12/2025" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGerenciarAssinatura"
                    style="@style/App.Button.Outlined.LessRounded"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"
                    android:text="Gerenciar assinatura"
                    android:textColor="@color/primary_color"
                    app:layout_constraintTop_toBottomOf="@id/icon_plano"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/header_rascunhos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Meus rascunhos"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/card_perfil"
            app:layout_constraintEnd_toEndOf="@id/card_perfil"
            app:layout_constraintTop_toBottomOf="@id/card_perfil" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_rascunhos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_rascunhos"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            tools:itemCount="2"
            tools:listitem="@layout/item_ideia" />

        <LinearLayout
            android:id="@+id/view_empty_state_rascunhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_rascunhos"
            tools:visibility="visible">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/anim_rascunhos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As grandes ideias começam aqui."
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Crie o seu primeiro rascunho!"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorPrimary"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>