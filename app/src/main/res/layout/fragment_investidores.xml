<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".InvestidoresFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/readiness_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/text_view_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Painel de propulsão"
                android:textAppearance="@style/Text.TitleLarge"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_subtitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="Nenhuma ideia pronta para busca de investimentos."
                android:textAppearance="@style/Text.BodyMedium"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_titulo"
                app:layout_constraintBottom_toTopOf="@id/lottie_empty_readiness"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_empty_readiness"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                app:layout_constraintDimensionRatio="1:1"
                android:contentDescription="@string/desc_animacao_ideia_nao_pronta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_subtitulo"
                app:layout_constraintBottom_toTopOf="@id/container_cadastro_investidor"
                app:layout_constraintWidth_percent="0.7"
                app:lottie_rawRes="@raw/no_ready"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                tools:layout_height="250dp" />

            <LinearLayout
                android:id="@+id/container_cadastro_investidor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lottie_empty_readiness">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Você é um investidor?"
                    android:textAppearance="@style/Text.TitleMedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Cadastre-se para ter acesso a ideias validadas."
                    android:textAppearance="@style/Text.BodySmall.Muted" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cadastrar_investidor"
                    style="@style/App.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Cadastrar Perfil de Investidor"
                    app:icon="@drawable/ic_work" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/container_investor_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investidores Compatíveis"
                android:textAppearance="@style/Text.TitleLarge"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Parabéns! Explore perfis de investidores."/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_ideia_filter"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Filtrar por ideia"
                android:visibility="gone"
                tools:visibility="visible">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_ideia_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Todos os Investidores" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_investors"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/item_investor"/>

            <LinearLayout
                android:id="@+id/container_no_matches"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="gone"> <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_no_matches"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_rawRes="@raw/anim_mapa_procurando"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nenhum investidor compatível encontrado"
                    android:textAppearance="@style/Text.TitleMedium"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Tente ajustar os filtros ou selecionar outra ideia."
                    android:textAppearance="@style/Text.BodySmall.Muted"
                    android:textAlignment="center"/>

            </LinearLayout>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/progress_bar_loading_investors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>
</ScrollView>