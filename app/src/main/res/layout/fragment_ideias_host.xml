<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="4dp"
    tools:context=".IdeiasHostFragment">

    <!-- Container flutuante estilo glassmorphism -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tab_layout_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="24dp"
        app:strokeWidth="0dp"
        app:cardUseCompatPadding="true"
        android:background="@drawable/bg_glass_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_metallic_pattern"

            app:tabMode="fixed"
            app:tabGravity="fill"

            app:tabIndicator="@drawable/tab_indicator_modern"
            app:tabIndicatorAnimationDuration="250"
            app:tabIndicatorFullWidth="false"
            app:tabTextAppearance="@style/TabTextStyle"

            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/colorOnSurfaceVariant" />

    </com.google.android.material.card.MaterialCardView>

    <!-- ConteÃºdo -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
