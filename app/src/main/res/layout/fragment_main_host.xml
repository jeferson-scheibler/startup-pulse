<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_metallic_pattern"
    tools:context=".ui.main.MainHostFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navGraph="@navigation/main_nav_graph" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/fab_content_desc"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorPrimary"
        app:tint="@color/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_mentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/fab_content_desc2"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorSurface"
        app:tint="@color/colorSecondary"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:background="@drawable/glass_fume_background"
        android:paddingVertical="4dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationZ="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_button_ideias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_ideias"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lightbulb"
                app:tint="@color/colorSecondary"
                android:duplicateParentState="true"/>

            <TextView
                android:id="@+id/nav_text_ideias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_ideias"
                android:textSize="12sp"
                android:textColor="@color/colorSecondary"
                android:duplicateParentState="true"
                android:textAppearance="@style/Text.TitleLarge"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_button_mentores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_mentores"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mentor"
                app:tint="@color/colorSecondary"
                android:duplicateParentState="true"/>

            <TextView
                android:id="@+id/nav_text_mentores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_mentores"
                android:textSize="12sp"
                android:textColor="@color/colorSecondary"
                android:duplicateParentState="true"
                android:textAppearance="@style/Text.TitleLarge"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_button_investidores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_investidores"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trending_up"
                app:tint="@color/colorSecondary"
                android:duplicateParentState="true"/>

            <TextView
                android:id="@+id/nav_text_investidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investidores"
                android:textSize="12sp"
                android:textColor="@color/colorSecondary"
                android:duplicateParentState="true"
                android:textAppearance="@style/Text.TitleLarge"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_button_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/nav_icon_perfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                app:tint="@color/colorSecondary"
                android:duplicateParentState="true"/>

            <TextView
                android:id="@+id/nav_text_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_perfil"
                android:textSize="12sp"
                android:textColor="@color/colorSecondary"
                android:duplicateParentState="true"
                android:textAppearance="@style/Text.TitleLarge"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>