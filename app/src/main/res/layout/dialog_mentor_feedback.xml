<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    app:cardBackgroundColor="@color/grafitero_color"
    android:layout_margin="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dialog_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            app:lottie_rawRes="@raw/avaliation_sucess"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text.TitleLarge"
            android:textColor="@color/colorOnSurface"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:text="Feedback do Mentor" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/dialog_feedback_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Text.BodyMedium"
                android:textColor="@color/colorOnSurface"
                android:gravity="start"
                android:lineSpacingMultiplier="1.2"
                tools:text="Aqui vai o texto do feedback do mentor, que pode ser um pouco longo e precisar de uma barra de rolagem para que o usuário consiga ler todo o conteúdo confortavelmente."/>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_button_close"
                style="@style/App.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fechar"
                tools:text="Fechar"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>