<resources>

    <style name="App.Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="App.Button.LessRounded" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/App.Shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="iconPadding">8dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/ripplePrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="App.Button.Outlined.LessRounded" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/App.Shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/rippleNeutral</item>
    </style>

    <style name="App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/rippleNeutral</item>
    </style>

    <style name="Card.Glass" parent="Widget.Material3.CardView.Filled">
        <item name="android:background">@drawable/glass_fume_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Text.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.BodyMedium.Muted" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:alpha">0.75</item>
    </style>

</resources>
